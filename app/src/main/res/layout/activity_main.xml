<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:id="@+id/connectionStateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="No Device Connected"
        android:textAlignment="center"
        android:textColor="#000000"
        />


    <TextView
        android:id="@+id/breathalyzerStateTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Tap on Connect Breathalyzer"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/connect_nearest_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect Breathalyzer"
        />


    <Button
        android:id="@+id/get_battery_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Battery Level"
        />

    <Button
        android:id="@+id/get_serial_number_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Serial Number"
        />

    <Button
        android:id="@+id/get_use_count_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Use Count"
        />

    <Button
        android:id="@+id/start_blow_process_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Test Countdown"
        />

    <Button
        android:id="@+id/disconnect_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Disconnect"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:srcCompat="@android:drawable/ic_dialog_email"/>
</androidx.appcompat.widget.LinearLayoutCompat>